<Window x:Class="PolloUpdater.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pöllöeskadroona Updater" Height="159" Width="525" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <StackPanel Orientation="Vertical">
        <TextBlock x:Name="DownloadStatus" Margin="10,20,10,0" TextWrapping="Wrap" Text="{Binding ProgressFile}" VerticalAlignment="Top"/>
        <ProgressBar Name="DownloadProgressBar" Margin="10" VerticalAlignment="Top" Maximum="{Binding ProgressToDo}" Value="{Binding ProgressDone}" Height="30"/>
        <Button Name="StartButton" Content="Sync" HorizontalAlignment="Right" Margin="0,10,10,0" VerticalAlignment="Top" Width="75" Click="StartButton_Click" Height="25"/>
        
    </StackPanel>
</Window>
