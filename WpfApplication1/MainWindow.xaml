<Window x:Class="PolloUpdater.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pöllöeskadroona Updater" Height="159" Width="525" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" SizeToContent="Height">
    <StackPanel Orientation="Vertical">
        <TextBlock x:Name="DownloadStatus" Margin="10,10,10,0" TextWrapping="Wrap" Text="{Binding ProgressFile}" VerticalAlignment="Top"/>
        <ProgressBar Name="DownloadProgressBar" Margin="10" VerticalAlignment="Top" Maximum="{Binding ProgressToDo}" Value="{Binding ProgressDone}" Height="30"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="OpenCreateWindow" Margin="10" Width="70" Click="OpenCreateWindow_Click">Create</Button>
        <Button Name="StartButton" Content="Sync" HorizontalAlignment="Right" Margin="0,10,10,10" VerticalAlignment="Top" Width="70" Click="StartButton_Click" Height="25"/>
        </StackPanel>
    </StackPanel>
</Window>
